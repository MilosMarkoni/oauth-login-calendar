<html>
    <head>
        <meta charset="utf-8">
        <title>Oauth app</title>
        <style>
            body {
                margin: 0;
                font-family: monospace;
            }
           nav {
               background: #4d5057;
               height: 80px;
           }
           nav ul {
               list-style-type: none;
               padding: 20px;
               box-sizing: border-box;
                margin: 0;
                height: 100%;
           }
           nav li {
               background: #246EB9;
               text-decoration: none;
               display: inline-block;
               box-sizing: border-box;
               vertical-align: middle;
           }
           nav li a {
               color: white;
               padding: 10px;
               display: block;
               text-decoration: none;
           }
           header, main {
               margin: 20px;
               text-align: center;
           }
           .google-btn {
               color: white;
               text-decoration: none;
               font-size: 18px;
               padding: 10px;
               background: #246db9;
           }
           table {
               border-collapse: collapse;
               width: 100%;
               font-size: 14px;
               table-layout: fixed;
           }
           td, th {
               padding: 5px 20px;
               text-align: left;
               box-sizing: border-box;
               border-bottom: 1px solid #e1e1e1;
           }
           td:first-child, th:first-child {
               width: 50px;
               text-align: center;
           }
        </style>
    </head>
    <body>
        <nav>
            <ul>
                <li><a href="/auth/logout">Logout</a></li>
                <li><a href="/">Homepage</a></li>
            </ul>
        </nav>
        <header>
            <h1>Welcome to your calendar, <%= user.username %>. </h1>
            <h2>Here are your calendar events </h2>
            <table>
                <thead>
                    <th>
                        #
                    </th>
                    <th>
                        Event summary
                    </th>
                </thead>
            <% for(var i=0; i < 10; i++) {%>

                <% if (events[i]) { %>
                    <tr>   
                        <td>
                            <%= i+1 %>
                        </td>
                        <td>
                           <%= events[i].summary %>
                      </td>   
                    </tr>
                <% } %>
                
                
            <% } %>
            </ul>
            
        </header>
    </body>
</html>